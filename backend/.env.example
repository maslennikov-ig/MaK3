# Окружение приложения
NODE_ENV=development

# Настройки сервера
PORT=3001

# База данных
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mak3_crm?schema=public"

# JWT Аутентификация
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_ACCESS_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Настройки Object Storage (S3)
USE_S3_STORAGE=false
S3_BUCKET_NAME=mak3-files
S3_REGION=ru-central1
S3_ENDPOINT=https://storage.yandexcloud.net
S3_ACCESS_KEY_ID=your_access_key_id
S3_SECRET_ACCESS_KEY=your_secret_access_key
S3_PUBLIC_URL=https://your-bucket-name.storage.yandexcloud.net

# Локальное хранилище файлов (если USE_S3_STORAGE=false)
LOCAL_STORAGE_PATH=./uploads

# Настройки Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Sentry (опционально)
SENTRY_DSN=
